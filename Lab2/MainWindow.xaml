<Window x:Class="Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="userMessage" HorizontalAlignment="Left" Margin="303,92,0,0" Text="Enter a message" TextWrapping="Wrap" VerticalAlignment="Top" Width="106"/>
        <Label x:Name="userLabel" Content="Display here" HorizontalAlignment="Left" Margin="296,130,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.068,0.206" Width="120" FontSize="14" Background="#FFF70202" HorizontalContentAlignment="Center"/>
        <Button x:Name="copyButton" Content="Copy" HorizontalAlignment="Left" Margin="325,182,0,0" VerticalAlignment="Top" Background="#FFE8F300" Width="53" Click="copyClick" VerticalContentAlignment="Top"/>

    </Grid>
</Window>
